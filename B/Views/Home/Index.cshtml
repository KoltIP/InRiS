@model IEnumerable<B.Models.DivisionModel>;

@{
    ViewData["Title"] = "Division List";
}

<script>   
    function find(str) {
        $.get("Find/" + str,
            {
                search: str.value
    
    },
    function(data) {
        data.map()
      });
};    
</script>

